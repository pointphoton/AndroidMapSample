<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:background="@color/colorCustomItemBG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvPrediction"
            android:clickable="true"
            android:onClick="@{(view)->handler.onItemClick(view,prediction.place_id)}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:elevation="3dp"
            card_view:cardCornerRadius="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/colorCustomItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="18sp"
                    android:text="@{prediction.description}"
                    android:textColor="@color/colorPrimaryDark"
                    bind:layout_constraintLeft_toLeftOf="parent"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <data>
        <import type="android.view.View"/>
        <variable
            name="prediction"
            type="co.marti.challenge.network.model.place.Prediction" />

        <variable
            name="handler"
            type="co.marti.challenge.ui.search.SearchDataHandlers" />
    </data>

</layout>